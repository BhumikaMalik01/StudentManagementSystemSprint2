@model IEnumerable<StudentMgtMVC.Models.Student>

@{
    ViewData["Title"] = "Get All Students";
}

<h1>Get All Students</h1>

<div class="container p-3">
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        StudentID
                    </th>
                    <th>
                        StudentFirstName
                    </th>
                    <th>
                        StudentLastName
                    </th>
                    <th>
                        StudentCourse
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var detail in Model)
                {
                    <tr>
                        <td>@detail.StudentID</td>
                        <td>@detail.StudentFirstName</td>
                        <td>@detail.StudentLastName</td>
                        <td>@detail.StudentCourse</td>

                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Student" asp-route-Id="@detail.StudentID" asp-action="AddStudentById" class="btn btn-primary mx-1">
                                    <i class="fas fa-edit"></i> Add
                                </a>
                                @*<a asp-controller="Admin" asp-route-Id="@detail.StudentID" asp-action="DeleteStudentById" class="btn btn-danger mx-3">
                                    <i class="far fa-trash-alt"></i> Delete
                                </a>*@
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>