@model StudentMgtMVC.Models.StudentMarks


@{
    ViewData["Title"] = "Add Student Marks";
}

<h1>Add Student Marks</h1>

<form method="post" asp-controller="StudentMarks" asp-action="AddStudentMarksById">
    <div>
        <div class="row">
            <div class="col-8">

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="StudentID"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="StudentID" class="form-control" />
                        <span asp-validation-for="StudentID" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="StuMarks"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="StuMarks" class="form-control" />
                        <span asp-validation-for="StuMarks" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="StuSem"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="StuSem" class="form-control" />
                        <span asp-validation-for="StuSem" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group row">
                    @*<div class="col-6 offset-4 row">*@
                    <div class="col-4 offset-4">
                        <input type="submit" class="btn btn-info w-100" value="Add" />
                    </div>

                    @if (ViewBag.Message != null)
                    {
                        <a class="nav-link text-dark btn-primary font-weight-bold" style="position: relative;
                         margin: 10px; background-color: #87CEEB; float: right" asp-controller="StudentMarks"
                           asp-action="GetAllStudentMarks">Get Marks</a>

                        <script type="text/javascript">
                            window.onload = function () {
                                alert("@ViewBag.Message");
                            };
                        </script>
                    }
                </div>

            </div>
        </div>
    </div>
</form>