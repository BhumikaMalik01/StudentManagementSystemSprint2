@model IEnumerable<StudentMgtMVC.Models.StudentMarks>

@{
    ViewData["Title"] = "GetAllStudentMarks";
}

<h1>Get All Student Marks</h1>

<div class="container p-3">
    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        SrNo
                    </th>
                    <th>
                        StudentID
                    </th>
                    <th>
                        StuMark
                    </th>
                    <th>
                        StuSem
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var detail in Model)
                {
                    <tr>
                        <td>@detail.SrNo</td>
                        <td>@detail.StudentID</td>
                        <td>@detail.StuMarks</td>
                        <td>@detail.StuSem</td>

                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="StudentMarks" asp-route-Id="@detail.SrNo" asp-action="DeleteMarks" class="btn btn-primary mx-1">
                                    <i class="fas fa-edit"></i> Delete
                                </a>

                                @*<a asp-controller="StudentMarks" asp-route-Id="@detail.StudentID" asp-action="DeleteMarks" class="btn btn-danger mx-3">
                                    <i class="far fa-trash-alt"></i> Delete
                                </a>*@
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

